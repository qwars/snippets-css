
.store-editor
	align-self: center
	gap: 1rem
	grid-template-columns: 1fr auto
	& > section
		width: 57rem
		grid-area: 1/1/2/2
		gap: 1rem
		& > h4
			margin-top: 1rem
	& > aside
		width: 18rem
		padding: 0px
		border: 0px
		grid-area: 1/2/2/3
		& > section
			display: flex
			flex-direction: column
			gap: 1rem
			h4
				margin-bottom: .5rem
			label
				border: 0px
				& > *
					border: 0px !important
				& output
					position: fixed
					top: -100vh
					padding-left: 1rem
					box-sizing: border-box
			input[type="number"]
				padding-left: 0px
				height: 1.2rem
				& ~ *
					height: 1.2rem
				&:placeholder-shown ~ *
					color: var( --placeholder-color )
			& > label
				border: 0px
				background-color: var( --disabled-color )
				& > p
					display: flex
					flex-direction: column
					align-items: center
					justify-content: center
					padding: 0px
					margin: 0px
					height: 9rem
					gap: 1rem
					color: var( --extra-color )
					cursor: pointer
					transition: opacity .3s
					&:hover
						color: var( --hover-color )
				&[style*="background"]
					& > p
						opacity: 0
					&:hover
						& > p
							background: vhite
							opacity: .75
		h4 > dfn
			flex-grow: 1
	.tags-settings
		display: flex
		flex-wrap: wrap
		gap: 1em
		& > span[contenteditable]
			white-space: nowrap
			line-height: 2rem
		& > span:not( [contenteditable] )
			background: var( --disabled-color )
			height: 2rem
			display: inline-flex
			align-items: center
			padding: 0px 1rem
			gap: 1rem
			cursor: pointer
			border-radius: .3rem
			opacity: .55
			transition: opacity .3s
			&:hover
				opacity: 1
			del
				display: inline-flex
				align-items: center
				justify-content: center
				cursor: pointer
				margin-right: -1ex
				color: var( --extra-color )
				&:before
					content: "\00D7"
					font-size: 1.2rem

	section[contenteditable], section [contenteditable]
		border: 0px
		& + a
			margin-top: 1ex
			display: block

.carusel-images
	justify-self: stretch
	height: 26.35rem
