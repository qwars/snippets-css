
/* Template article */

.widgets-collection-folders
	margin-top: 8rem
	display: flex
	flex-direction: column
	& > label
		margin: 1rem
		i
			cursor: pointer
	& > ul
		flex-grow: 1
		height: 0px
		width: 18rem
		margin: 0px
		padding: 0px 1rem
		box-sizing: border-box
		list-style: none
		overflow: auto
		display: flex
		flex-direction: column
		gap: 1rem
		li
			display: flex
			align-items: center
			gap: 1rem
			& > span
				flex-grow: 1
				width: 0px
				text-overflow: ellipsis
				overflow: hidden
				white-space: nowrap
			svg
				width: 1rem
				height: 1rem

.wigets-folder
	flex-grow: 1
	display: flex
	align-items: center
	gap: 1rem
	overflow: hidden
	width: 0px
	padding: 0px 1rem

.settings-template
	.color-hue
		margin: 0px 1rem
		width: 20rem
	.is-font-text
		color: var(--text-color)
	.is-font-title
		color: var(--title-color)
	.is-font-extra
		color: var(--extra-color)
	.is-color-red, .is-color-blue, .is-color-green
		width: 2rem
		height: 2rem
		border-radius: .3rem
		align-items: center
		justify-content: center
		&:before
			content: ""
			width: .5rem
			height: .5rem
			background: white
			border-radius: .5rem
			border: var( --border )
			opacity: 0
			transition: opacity .3s
	[open]
		.is-color-red, .is-color-blue, .is-color-green
			&:before
				opacity: 1
	.is-color-red
		background-color: red
	.is-color-blue
		background-color: blue
	.is-color-green
		background-color: green
