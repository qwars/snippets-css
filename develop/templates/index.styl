
/* Template article */

.widgets-collection-folders
	margin-top: 8rem
	display: flex
	flex-direction: column
	& > label
		margin: 1rem
		i
			cursor: pointer
	& > ul
		flex-grow: 1
		height: 0px
		width: 18rem
		margin: 0px
		padding: 0px 1rem
		box-sizing: border-box
		list-style: none
		overflow: auto
		display: flex
		flex-direction: column
		gap: 1rem
		li
			display: flex
			align-items: center
			gap: 1rem
			& > span
				flex-grow: 1
				width: 0px
				text-overflow: ellipsis
				overflow: hidden
				white-space: nowrap
			svg
				width: 1rem
				height: 1rem

.wigets-folder
	flex-grow: 1
	display: flex
	align-items: center
	gap: 1rem
	overflow: hidden
	width: 0px
	padding: 0px 1rem

.settings-template
	kbd.state-landscape
		transition: transform .3s
		transform: rotate( -90deg )
	kbd.state-portrait
		transition: transform .3s
		transform: rotate( 0deg )

	.color-hue
		margin: 0px 1rem
		width: 20rem
	.is-font-text
		color: var(--text-color)
	.is-font-title
		color: var(--title-color)
	.is-font-extra
		color: var(--extra-color)
	.is-color-red, .is-color-blue, .is-color-green
		width: 2rem
		height: 2rem
		border-radius: .3rem
		align-items: center
		justify-content: center
		&:before
			content: ""
			width: .5rem
			height: .5rem
			background: white
			border-radius: .5rem
			border: var( --border )
			opacity: 0
			transition: opacity .3s
	[open]
		.is-color-red, .is-color-blue, .is-color-green
			&:before
				opacity: 1
	.is-color-red
		background-color: red
	.is-color-blue
		background-color: blue
	.is-color-green
		background-color: green

.MediaState
	flex-grow: 1
	display: flex
	justify-content: center
	align-items: center
	box-sizing: border-box
	position: relative
	margin:3rem
	.current-frame
		position: relative
		z-index: 1
	.current-grid
		position: absolute
		display: grid
		top: 0px
		left: 0px
		right: 0px
		margin: auto
		span
			display: flex
			align-items: center
			justify-content: center
			position: relative
			cursor: pointer
			transform: translate(-1px, 1px);
			&:hover, &.active-state
				outline: 1px solid var( --hover-color )
				outline-offset: 3px
			&.col-none, &.row-none
				&:hover:before
					background: var( --hover-color )
				&:before
					content: ""
					min-width: 1rem
					min-height: 1rem
					width: 100%
					height: 100%
					margin: -.5rem
					opacity: .1
					transition: all .3s

	.current-rows, .current-columns
		position: absolute
		top: 0px
		left: 0px
		// outline: 2px solid var( --visited-color )
		margin: auto
		display: flex
		align-items: center
		justify-content: center
		z-index: 0
		span
			display: flex
			align-items: flex-end
			justify-content: flex-end
			position: relative
			& > s
				outline: 1px solid var( --select-color )
				outline-offset: 0px;
				opacity: 0
				color: var( --b-color )
				background: var( --svg-hatch ) repeat
				background-size: .1rem .1rem
				transition: opacity .3s
	.current-rows
		bottom: 0px
		left: -2rem
		& > div
			margin-top: -1px
			display: grid
			width: 1rem
			span:first-child:before
				content: ""
				place-self: flex-start
				position: absolute
				left: 0px
				right: 0px
				margin: auto
				opacity: 0
				outline: 1px solid var( --b-color )
				outline-offset: 0px;
				transition: opacity .3s

			span:last-child > s
				max-height: 0px
				margin-bottom: 0px !important

	.current-columns
		top: -2rem
		right: 0px
		& > div
			margin-left: -1px
			display: grid
			height: 1rem
			span:last-child > s
				max-width: 0px
				margin-right: 0px !important
			span:first-child:before
				content: ""
				place-self: flex-start
				position: absolute
				left: 0px
				top: 0px
				bottom: 0px
				margin: auto
				opacity: 0
				outline: 1px solid var( --select-color )
				outline-offset: 0px;
				transition: opacity .3s

	&.view-grid
		.current-columns, .current-rows
			& > div > span
				& > s, &:before
					opacity: .1
				&:before
					opacity: .1
					transform: translate( -1px, -1px)
	iframe
		box-sizing: border-box
		border: 0px solid transparent
		outline: var( --border )
		transition: width .3s, height .3s
