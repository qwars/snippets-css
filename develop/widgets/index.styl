
article > section.widget-editor
	margin-left: -1rem

.imba-codemirror
	grid-area: 1/1/2/3
	place-self: stretch
	display: grid
	grid-template-columns: 1fr
	grid-template-rows: 1fr
	box-sizing: border-box
	position: relative
	overflow: auto
	.CodeMirror
		min-height: 100%
		.CodeMirror-hscrollbar
			visibility: hidden
.code-imba svg
	width: 5rem
.code-imba svg
	width: 3rem

.CreateSetting
	z-index: 1
	display: flex
	flex-direction: column
	gap: 1rem
	height: 0px
	overflow: hidden
	transition: height .3s, padding .3s
	textarea
		overflow: hidden
		resize: none
	label:nth-child(3)
		flex-grow: 1
hr.create-form
	&[open]
		margin-bottom: 0px
	&:not( [open] ) > aside
		opacity: 0
		z-index: -1
	& > aside
		background-color: var( --link-color )
		transition: opacity .3s
		kbd
			color: var( --canvas-color )
			transform: rotate( 45deg )
			transition: transform .3s
	& + section form.CreateSetting
		margin: 1rem 0px
		padding-top: 1rem
		height: 15rem
		textarea
			overflow: auto
			resize: none

.search-tag, .search-tag-event
	margin-left: .5rem
	display: flex
	input
		padding-left: 2rem
		& + i
			cursor: pointer
			margin-right: -1.5rem
	&:not(.search-tag-event) input
		text-transform: uppercase
	& ~ ul
		list-style: none
		margin: 1rem -2rem 1rem 0px
		padding: 0px
		overflow: hidden auto
		li
			display: flex
			align-items: center
			height: 1.5rem
			transform: translateX(1rem)
			width: 16rem
			cursor: pointer
			&.active
				color: var(--active-color)
				font-weight: bolder
				kbd, .kbd
					color: var(--active-color)
				& del
					pointer-events: none
					visibility: hidden
					cursor: default
			span
				flex-grow: 1
				overflow: hidden
				text-overflow: ellipsis
				white-space: nowrap
			del
				color: var(--extra-color)
				transition: color .3s
				cursor: pointer
				&:hover
					color: var(--warning-color)
				&:active
					color: var(--invalid-color)

.ImbaDebugState > section
	position: fixed
	z-index: -10
	bottom: 2rem
	right: 20rem
	font: var( --font-text )
	min-height: 14.06vw
	min-width: 25vw
	padding: 1rem
	box-sizing: border-box
	box-shadow: 0px 0px 1.5rem -0.5rem var( --border-color, GrayText )
	border-radius: 1rem
	display: flex
	flex-direction: column
	gap: 1rem
	opacity: 0
	cursor: default
	transition: opacity .5s, min-height .3s, min-width .3s
	user-select: none
	align-items: center
	justify-content: center
	&.is-waiting > div:before
		content: "\2744"
		font-size: 2rem
		display: flex
		align-items: center
		justify-content: center
		position: absolute
		top: 0px
		right: 0px
		bottom: 0px
		left: 0px
		margin: auto
		color: var(--extra-color)
		animation: spin 3s linear infinite

	& > div
		flex-grow: 1
		display: grid
		grid-template-rows: auto 1fr auto
		padding: 1rem
		position: relative
		iframe
			place-self: stretch
			border: 0px solid transparent
		hr
			margin: 0px -1rem
			&:before
				content: ""
				position: absolute
				top: 0px
				bottom: 0px
				width: 1px
				background: var( --border-color )
			&:first-child:before
				left: 1rem
			&:last-child:before
				right: 1rem
	& > aside
		display: flex
		gap: 1rem
		align-items: center
		justify-content: space-between
		& > abbr
			flex-grow: 1
		& > kbd
			cursor: move
		svg
			width: 1rem
			height: 1rem
	kbd.media-state
		cursor: pointer
		& > svg
			transform: rotate(-90deg)
			transition: transform .3s
	&.media-portrait
		kbd.media-state > svg
			transform: rotate(0deg)

.ImbaDebugState.active > section
	z-index: 100
	opacity: 1

.TagSetting input
	max-width: 6.8rem
	text-transform: uppercase

.type-settings-Property, .type-settings-Event
	display: flex
	align-items: center
	justify-content: space-between
	summary
		text-transform: uppercase
		& + ul
			margin: 0px
			padding: 0px
			list-style: none
			border-radius: .3rem
			overflow: hidden auto
			max-height: 30rem
			li
				padding: 0px 1rem
				cursor: pointer
				&.active
					background: var(--checked-color)
					color: white
					cursor: default
				&:not(.active):hover
					background: var(--border-color)