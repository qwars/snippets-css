
/* scheme-ui style */

.scheme-ui
	position: fixed
	top: 0px
	bottom: 0px
	left: 0px
	right: 0px
	display: flex
	flex-direction: column
	gap: 1rem
	& > nav
		display: flex
		flex-wrap: wrap
		align-items: center
		gap: 1rem
		padding: 1rem
		a
			white-space: nowrap
	& > article
		flex-grow: 1
		padding: 1rem 2rem
	.content-sectioning
		& hr + section > div
			display: flex
			flex-direction: column
			gap: 1rem
		.sketch > *
			background: var( --disabled-color )
			outline: 1px solid var( --info-color )
	.ui-colors
		flex-grow: 1
		padding: 1rem 2rem
		& > section
			display: flex
			flex-direction: column
			gap: 1rem
		ul
			margin: 0px
			padding: 0px
			list-style: none
			display: flex
			justify-content: center
			flex-wrap: wrap
			gap: 1rem
			li
				border-radius: 1rem
				padding: 1rem 3.5rem 1rem 1rem
				position: relative
				border: 1px solid var( --border-color )
				max-width: 12rem
				min-width: 12rem
				& > *:not(:last-child)
					white-space: nowrap
				.PalletColor
					border: 1px solid var( --border-color )
					position: absolute
					top: 1rem
					z-index: 1
					border-radius: 1rem
					padding: 1rem
					background: var( --canvas-color )
					width: 0px
					height: 0px
					box-sizing: border-box
					overflow: hidden
					&:before
						content: "\270E"
						color: white
						background: var( --border-color )
						min-height: 1rem
						width: 1rem
						display: inline-flex
						align-items: center
						justify-content: center
						font-size: .8rem
						transform: translate( -.5rem, -.5rem)
						border-radius: 1rem
						cursor: pointer
					&[open]
						border-color: transparent
						width: 24rem
						height: 23rem
						box-shadow: 0px 0px 1rem var( --border-color )
						z-index: 10
						&:before
							display: none
				@media (min-width: 896px)
					&:nth-child(3) .PalletColor, &:not( :nth-child(3) ) .PalletColor:not( [open] )
						right: 1rem
				@media (max-width: 895px)
						&:nth-child(2) .PalletColor, &:not( :nth-child(2) ) .PalletColor:not( [open] )
							right: 1rem
