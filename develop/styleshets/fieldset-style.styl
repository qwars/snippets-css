
fieldset
	border: var( --border )
	padding: 1rem
	padding-block-start: .625rem
	position: relative
	& > legend
		& > aside
			position: absolute
			right: 1rem
			top: .5rem
			height: 1px
			display: flex
			align-items: center
			background: var( --canvas-color )
			&:empty
				display: none
		& > nav
			padding: 0px 1rem
			& > ol
				margin: 0px
				padding: 0px
				display: flex
				list-style: none
				align-items: center
				grid-gap: 1rem
				gap: 1rem
				li
					display: inline-flex
					align-items: center
					& > a
						height: 1.3rem
						border: 1px solid transparent
						display: flex
						align-items: center
						samp
							font-size: 1rem
						&.active, &.is-active
							// color: var( --b-color )
							// border: 1px solid var( --b-color )
							padding: 0px .5rem
							border-radius: 1rem
							margin: 0px  -.5rem