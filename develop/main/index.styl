
main
	display: grid
	grid-template-rows: 1fr
	grid-template-columns: auto 1fr auto
	align-items: stretch
	position: relative
	& > nav, & > aside
		max-height: calc( 100vh - 5rem )
	& > nav
		width: 0px
		position: relative
		display: grid
		grid-template-rows: 1fr
		grid-template-columns: 1fr
		align-items: stretch
		& > section
			position: relative
			z-index: 10
			width: 0rem
			box-sizing: border-box
			border-right: var( --border )
			background: var(--canvas-color)
			overflow: hidden
			transition: width .3s
		&.active > section
			width: 18rem
	& > aside
		overflow: auto
		position: absolute
		right: 0px
		bottom: 0px
		top: 2rem
		width: 0rem
		border-left: var( --border )
		padding-left: 1rem
		box-sizing: border-box
		opacity: 0
		transition: width .3s, opacity .3s
		background: var( --canvas-color )
		overflow: hidden
		display: grid
		grid-template-rows: 1fr
		z-index: 0
		&:empty
			display: none
		& > section
			width: 18rem
			padding-right: 2rem
			overflow: hidden
			align-self: stretch
			display: flex
			flex-direction: column
		&.active
			width: 20rem
			opacity: 1
			margin: 1rem 0px;
			box-sizing: border-box;
			z-index: 2
			& > section
				overflow: auto
		&:before
			content: ""
			height: .1rem
			display: block
			background: var( --canvas-color )
			box-shadow: 0px 0px 1rem .5rem var( --canvas-color )
			position: absolute
			top: 0px
			left: 0px
			right: 0px
			z-index: 2
	& > article
		grid-area: 1/2/2/3
		overflow: auto
		max-height: calc( 100vh - 3.5rem )
		& > section
			overflow: auto
			& > ul
				margin: 0px
				padding: 1rem
				display: grid
				grid-template-columns: repeat( auto-fit, 20rem )
				grid-auto-rows: 12rem;
				justify-content: center
				gap: 1rem
				overflow: auto
				&:before
					content: ""
					position: absolute
					top: 0px
					right: 0px
					left: 0px
					margin: auto
					z-index: 1
					box-shadow: 0rem 0rem .5rem .5rem var(--canvas-color)
				& > li
					list-style: none
					place-self: stretch
					position: relative
					& > figure
						height: 100%

article
	display: flex
	flex-direction: column
	gap: 1rem
	padding: 0px 1rem
	& > section
		flex-grow: 1
		display: grid
		grid-template-rows: 1fr
		grid-template-columns: auto 1fr auto
		align-items: stretch
		overflow: hidden !important
		position: relative
		height: 0px
		z-index: 1
		margin-right: -1rem
		& > section
			grid-area: 1/2/2/3
		& > aside
			grid-area: 1/3/2/4
			width: 24rem
			border-left: var(--border)
			padding: 0px 1rem
			box-sizing: border-box
			& > h4
				font-size: 1.3rem
				display: flex
				gap: 1rem
				align-items: center
				justify-content: space-between
		& > nav
			display: grid
			grid-template-rows: 1fr
			grid-template-columns: 1fr
			align-items: stretch
			position: relative
			box-sizing: border-box
			overflow: hidden
			padding-right: 2rem
			border-right: var( --border )
			margin-left: 0px
			width: 17rem
			transition: width .3s, margin-left .3s
			&:not(.active)
				width: 0px
				margin-left: -3rem
			ul
				margin: 0px
				padding: 1rem 0px
				margin-right: -2rem
				padding-right: 1rem
				overflow: auto
				display: flex
				flex-direction: column
				gap: 1rem
				&:empty
					display: none
				& > li
					display: flex
					align-items: center
					gap: 1rem
					& aside
						display: flex
						align-items: center
					kbd svg, del svg
						width: 1rem
						height: 1rem
					& > span
						flex-grow: 1
						width: 0px
						text-overflow: ellipsis
						overflow: hidden
						white-space: nowrap

.trash-folder
	display: flex
	align-items: center
	gap: 1rem
	align-self: stretch
	padding: 0px 1rem
	& aside
		display: flex
		align-items: center
		gap: 1ex
	kbd svg, del svg
		width: 1rem
		height: 1rem
	& > span
		flex-grow: 1
		width: 0px
		text-overflow: ellipsis
		overflow: hidden
		white-space: nowrap
