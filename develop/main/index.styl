
main
	display: grid
	grid-template-rows: 1fr
	grid-template-columns: auto 1fr auto
	align-items: stretch
	position: relative
	& > nav, & > aside
		overflow: auto
		max-height: calc( 100vh - 3.5rem )
	& > article
		grid-area: 1/2/2/3
		overflow: auto
		max-height: calc( 100vh - 3.5rem )
		& > section
			overflow: auto
			& > ul
				margin: 0px
				padding: 1rem
				display: grid
				grid-template-columns: repeat( auto-fit, 20rem )
				grid-auto-rows: 11rem;
				justify-content: center
				gap: 1rem
				&:before
					content: ""
					position: absolute
					top: 0px
					right: 0px
					left: 0px
					margin: auto
					z-index: 1
					box-shadow: 0rem 0rem .5rem .5rem var(--canvas-color)
				& > li
					list-style: none
					place-self: stretch
					position: relative
					& > figure
						height: 100%

article
	display: flex
	flex-direction: column
	gap: 1rem
	padding: 0px 1rem
	& > section
		flex-grow: 1